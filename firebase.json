{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=72000"
                    }
                ]
            },
            {
                "source": "**/*.@(js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=72000"
                    }
                ]
            },
            {
                // Sets the cache header for 404 pages to cache for 5 minutes
                "source": "index.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=0"
                    }
                ]
            }
        ]
    }
}